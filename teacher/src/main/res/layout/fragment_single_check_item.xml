<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_vertical_margin_8"
    android:layout_marginRight="@dimen/activity_vertical_margin_8"
    app:cardBackgroundColor="@android:color/white"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.ltst.core.util.ForegroundImageView
            android:id="@+id/fragment_single_check_item_photo"
            android:layout_width="@dimen/select_person_icon_size"
            android:layout_height="@dimen/select_person_icon_size"
            android:layout_marginLeft="@dimen/activity_vertical_margin_8"
            android:layout_marginTop="@dimen/activity_horizontal_margin_16"
            app:FIV_foreground="@drawable/rounded_shape_foreground"
            app:srcCompat="@drawable/avatar_circle_cave"/>

        <TextView
            android:id="@+id/fragment_single_check_item_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/select_person_icon_size"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_16"
            android:layout_marginTop="@dimen/activity_horizontal_margin_16"
            android:layout_toRightOf="@+id/fragment_single_check_item_photo"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingRight="@dimen/activity_horizontal_margin_16"
            android:text="Child"
            android:textColor="@color/greyish_brown"
            android:textSize="@dimen/text_24sp"/>

        <LinearLayout
            android:id="@+id/fragment_single_check_item_states_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_single_check_item_photo"
            android:layout_marginBottom="@dimen/activity_horizontal_margin_16"
            android:layout_marginTop="@dimen/activity_horizontal_margin_16"
            android:orientation="vertical"/>

        <View
            android:id="@+id/fragment_single_check_item_check_divider"
            style="@style/HorizontalDivider.WhiteTwo"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>