<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:clickable="true"
              android:foreground="?selectableItemBackground"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/activity_vertical_margin_14"
              android:paddingTop="@dimen/activity_vertical_margin_10">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_18"
        android:src="@drawable/ic_addfamily"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/apple_green"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_16"
        android:text="@string/family_list_footer"/>

</LinearLayout>