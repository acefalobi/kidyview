<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:alertDialogTheme">@style/DialogTheme</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="AppTheme.SelectPersonForDialogTheme">
        <item name="android:textColorSecondary">@color/blue_grey</item>
    </style>

    <style name="CheckboxTheme" parent="AppTheme">
        <item name="android:textColorSecondary">@color/colorAccentBlue</item>
        <item name="colorAccent">@color/colorAccentBlue</item>
    </style>

    <style name="GreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/apple_green_two</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkOrange</item>
        <item name="colorAccent">@color/colorAccentBlue</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:alertDialogTheme">@style/DialogTheme</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorSecondary">@color/blue_grey</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="GreenTheme.GreenButtons">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.RadioButton" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/blue_grey</item>
    </style>

    <style name="DialogTheme" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="SpinnerTheme" parent="Theme.AppCompat.Light">
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerTheme.DropDownItem</item>
    </style>

    <style name="SpinnerTheme.DropDownItem" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="AppTheme.EnterTheme">
        <item name="android:windowBackground">@color/enter_background</item>
        <item name="android:textColorPrimaryInverse">@color/enterPrimaryTextColor</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppButton" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/white_three</item>
        <item name="android:height">56dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_14sp</item>
    </style>

    <style name="EventDocButton" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/blue_grey</item>
        <item name="android:height">56dp</item>
        <item name="android:textColor">@color/pale_gray</item>
        <item name="android:textSize">@dimen/text_14sp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_marginRight">@dimen/met_base_margin_horizontal</item>
        <item name="android:layout_marginLeft">@dimen/met_base_margin_horizontal</item>
        <item name="met_floatingLabel">highlight</item>
        <item name="met_singleLineEllipsis">true</item>
    </style>

    <style name="EditTextStyle.Inverse">
        <item name="met_baseColor">@android:color/white</item>
        <item name="met_primaryColor">@android:color/white</item>
        <item name="met_errorColor">@color/edit_text_error</item>
        <item name="met_textColorHint">@android:color/white</item>

    </style>

    <style name="EditTextStyle.Inverse.Email">
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:hint">@string/email_hint</item>
    </style>

    <style name="EditTextStyle.Inverse.Code">
        <item name="android:hint">@string/met_hint_code</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="EditTextStyle.Inverse.Code.NewPasswordCode">
        <item name="android:hint">@string/met_new_password_code</item>
    </style>

    <style name="EditTextStyle.Inverse.Password">
        <item name="android:hint">@string/met_hint_password</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="EditTextStyle.Inverse.Password.NewPassword">
        <item name="android:hint">@string/met_hint_new_password</item>

    </style>

    <style name="EditTextStyle.Inverse.ConfirmPassword">
        <item name="android:hint">@string/met_hint_confirm_password</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="EditTextStyle.Profile">
        <item name="android:layout_marginLeft">@dimen/met_profile_margin_left</item>
        <item name="android:layout_marginRight">@dimen/met_profile_margin_right</item>
        <item name="met_baseColor">@color/bluish_grey</item>
        <item name="met_primaryColor">@color/colorAccent</item>
        <item name="met_textColor">@android:color/black</item>
        <item name="met_floatingLabelPadding">@dimen/met_label_padding</item>
        <item name="met_iconPadding">@dimen/met_icon_padding</item>
        <item name="met_textColorHint">@color/bluish_grey</item>
    </style>

    <style name="EditTextStyle.Profile.Name">
        <item name="android:hint">@string/met_hint_name</item>
        <item name="met_iconLeft">@drawable/ic_user</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="EditTextStyle.Profile.Name.Required">
        <item name="android:hint">@string/met_hint_name_required</item>
    </style>

    <style name="EditTextStyle.Profile.Status">
        <item name="android:hint">@string/met_hint_status</item>
        <item name="met_iconLeft">@drawable/ic_user</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="EditTextStyle.Profile.Status.Required">
        <item name="android:hint">@string/met_hint_status_required</item>
    </style>

    <style name="EditTextStyle.Profile.Name.NoIcon">
        <item name="met_iconLeft">@drawable/met_transparent_icon</item>
    </style>

    <style name="EditTextStyle.Profile.Name.NoIcon.Required">
        <item name="android:hint">@string/met_hint_name_required</item>
    </style>

    <style name="EditTextStyle.Profile.Name.Blocked">
        <item name="android:focusable">false</item>
    </style>

    <style name="EditTextStyle.Profile.EmptyIcon">
        <item name="met_iconLeft">@drawable/met_transparent_icon</item>
    </style>

    <style name="EditTextStyle.Profile.EmptyIcon.LastName">
        <item name="android:inputType">textCapWords</item>
        <item name="android:hint">@string/met_hint_last_name</item>

    </style>

    <style name="EditTextStyle.Profile.EmptyIcon.LastName.Required">
        <item name="android:hint">@string/met_hint_last_name_required</item>
    </style>

    <style name="EditTextStyle.Profile.EmptyIcon.LastName.Blocked">
        <item name="android:focusable">false</item>
    </style>

    <style name="EditTextStyle.Profile.PersonalPhone">
        <item name="android:hint">@string/met_hint_personal_phone</item>
        <item name="met_iconLeft">@drawable/ic_phone</item>
        <item name="android:inputType">phone</item>
    </style>

    <style name="EditTextStyle.Profile.PersonalPhone.Required">
        <item name="android:hint">@string/met_hint_personal_phone_required</item>
    </style>

    <style name="EditTextStyle.Profile.PersonalPhone.NotRequired">
        <item name="android:hint">@string/met_hint_personal_second</item>
        <item name="met_iconLeft">@drawable/met_transparent_icon</item>
    </style>

    <style name="EditTextStyle.Profile.PersonalPhone.Blocked">
        <item name="android:focusable">false</item>
    </style>

    <style name="EditTextStyle.Profile.PersonalEmail">
        <item name="android:hint">@string/met_hint_personal_email</item>
        <item name="met_iconLeft">@drawable/ic_mail</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="EditTextStyle.Profile.PersonalEmail.Required">
        <item name="android:hint">@string/met_hint_personal_email_required</item>
    </style>

    <style name="EditTextStyle.Profile.PersonalEmail.Blocked">
        <item name="android:focusable">false</item>
    </style>

    <style name="EditTextStyle.Profile.SchoolTitle">
        <item name="android:hint">@string/met_hint_school_title</item>
        <item name="met_iconLeft">@drawable/ic_house</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="EditTextStyle.Profile.SchoolTitle.Required">
        <item name="android:hint">@string/met_hint_school_title_required</item>
    </style>

    <style name="EditTextStyle.Profile.SchoolTitle.Blocked">
        <item name="android:focusable">false</item>
    </style>

    <style name="EditTextStyle.Profile.SchoolAddress">
        <item name="android:hint">@string/met_hint_school_address</item>
        <item name="met_iconLeft">@drawable/ic_location</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="EditTextStyle.Profile.SchoolAddress.Required">
        <item name="android:hint">@string/met_hint_school_address_required</item>
    </style>

    <style name="EditTextStyle.Profile.SchoolPhone">
        <item name="android:hint">@string/met_hint_school_phone</item>
        <item name="met_iconLeft">@drawable/ic_phone</item>
        <item name="android:inputType">phone</item>
    </style>

    <style name="EditTextStyle.Profile.SchoolPhone.Required">
        <item name="android:hint">@string/met_hint_school_phone_required</item>
    </style>

    <style name="EditTextStyle.Profile.SchoolPhone.Additional">
        <item name="android:hint">@string/met_hint_school_additional_phone</item>
        <item name="met_iconLeft">@drawable/met_transparent_icon</item>
    </style>

    <style name="EditTextStyle.Profile.SchoolEmail">
        <item name="android:hint">@string/met_hint_school_email</item>
        <item name="met_iconLeft">@drawable/ic_mail</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="EditTextStyle.Profile.SchoolEmail.Required">
        <item name="android:hint">@string/met_hint_school_email_required</item>
    </style>

    <style name="EditTextStyle.Profile.Blood">
        <item name="android:hint">@string/met_hint_blood_group</item>
        <item name="met_iconLeft">@drawable/ic_tratment</item>
    </style>

    <style name="EditTextStyle.Profile.EmptyIcon.Allergies">
        <item name="met_singleLineEllipsis">false</item>
        <item name="android:hint">@string/met_hint_allergies</item>
    </style>

    <style name="EditTextStyle.Profile.EmptyIcon.Genotype">
        <item name="android:hint">@string/met_hint_genotype</item>
    </style>

    <style name="EditTextStyle.Profile.Additional">
        <item name="met_iconLeft">@drawable/ic_resume</item>
        <item name="met_singleLineEllipsis">false</item>
        <item name="android:hint">@string/met_hint_additional</item>
    </style>

    <style name="EditTextStyle.Settings">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="EditTextStyle.ChecksOther">
        <item name="android:layout_marginLeft">@dimen/met_profile_margin_left</item>
        <item name="android:layout_marginRight">@dimen/met_profile_margin_right</item>
        <item name="met_baseColor">@color/bluish_grey</item>
        <item name="met_primaryColor">@color/colorAccent</item>
        <item name="met_textColor">@android:color/black</item>
        <item name="met_floatingLabelPadding">@dimen/met_label_padding</item>
        <item name="met_iconPadding">@dimen/met_icon_padding</item>
        <item name="met_textColorHint">@color/bluish_grey</item>
    </style>

    <style name="EditTextStyle.ChecksCode">
        <item name="android:layout_marginLeft">@dimen/met_profile_margin_left</item>
        <item name="android:layout_marginRight">@dimen/met_profile_margin_right</item>
        <item name="met_baseColor">@color/bluish_grey</item>
        <item name="met_primaryColor">@color/colorAccent</item>
        <item name="met_textColor">@color/apple_green</item>
        <item name="met_floatingLabelPadding">@dimen/met_label_padding</item>
        <item name="met_iconPadding">@dimen/met_icon_padding</item>
        <item name="met_textColorHint">@color/bluish_grey</item>
        <item name="android:textSize">@dimen/text_34sp</item>
        <item name="fontPath">@string/open_sans_light</item>
    </style>

    <style name="TextViewItemSectionTitleStyle">
        <item name="android:textColor">@color/black_38</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="OpenSansLight">
        <item name="fontPath">@string/open_sans_light</item>
    </style>

    <style name="OpenSans">
        <item name="fontPath">@string/open_sans</item>
    </style>

    <style name="OpenSansExtraBold">
        <item name="fontPath">@string/open_sans_extra_bold</item>
    </style>

    <style name="RobotoLight">
        <item name="fontPath">@string/roboto_light</item>
    </style>

    <style name="RobotoMedium">
