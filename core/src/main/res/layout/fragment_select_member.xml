<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_vertical_margin_8"
        android:layout_marginRight="@dimen/activity_vertical_margin_8"
        android:layout_marginTop="@dimen/activity_vertical_margin_10"
        android:background="@drawable/search_layout_border"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_vertical_margin_18"
            android:paddingBottom="@dimen/activity_vertical_margin_16"
            android:paddingTop="@dimen/activity_vertical_margin_16"
            android:src="@drawable/ic_search_white_24dp"
            android:tint="@android:color/black"/>

        <EditText
            android:id="@+id/select_member_search_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_4"
            android:layout_marginRight="@dimen/activity_horizontal_margin_4"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textColor="@color/dark_grey_blue"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/select_member_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>