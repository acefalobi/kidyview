<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


    <ProgressBar
        android:id="@+id/check_email_progress_bar"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/progress_bar_height"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/activity_vertical_margin_10"
        android:indeterminate="true"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/check_email_text"
        style="@style/OpenSansLight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/check_email_field"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_16"
        android:layout_marginRight="@dimen/activity_horizontal_margin_16"
        android:text="Enter email"
        android:textColor="@color/blue_grey"
        android:textSize="@dimen/text_18sp"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@id/check_email_field"
        style="@style/EditTextStyle.ChecksCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"

        android:layout_marginTop="@dimen/activity_vertical_margin_16"
        android:hint="@string/check_email_hint"
        android:inputType="textEmailAddress"/>

    <Button
        android:id="@+id/checks_email_done"
        style="@style/DefaultButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin_8"
        android:enabled="false"
        android:text="@string/check_email_button"
        android:textColor="@android:color/white"
        />

</RelativeLayout>