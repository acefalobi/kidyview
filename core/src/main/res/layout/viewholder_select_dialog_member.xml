<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/viewholder_select_dialog_root_view"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:foreground="?selectableItemBackground"
              android:paddingBottom="@dimen/activity_vertical_margin_16"
              android:paddingTop="@dimen/activity_vertical_margin_16">

    <com.ltst.core.util.ForegroundImageView
        android:id="@+id/viewholder_select_dialog_avatar"
        android:layout_width="@dimen/select_member_dialog_avatar_size"
        android:layout_height="@dimen/select_member_dialog_avatar_size"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_vertical_margin_16"
        app:FIV_foreground="@drawable/rounded_shape_foreground"
        app:srcCompat="@drawable/avatar_circle_cave"/>

    <TextView
        android:id="@+id/viewholder_select_dialog_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_16"
        android:layout_weight="1"
        android:textColor="@color/dark_grey_blue"
        android:textSize="@dimen/text_16sp"/>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/viewholder_select_dialog_checkbox"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/activity_horizontal_margin_18"/>

</LinearLayout>