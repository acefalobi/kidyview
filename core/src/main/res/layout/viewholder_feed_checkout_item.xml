<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_vertical_margin_8"
    android:foreground="?selectableItemBackground"

    >

    <RelativeLayout
        android:id="@+id/checkout_report_root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.ltst.core.util.ForegroundImageView

            android:id="@+id/checkout_report_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_16"
            android:layout_marginStart="@dimen/activity_horizontal_margin_24"
            android:layout_marginTop="@dimen/activity_vertical_margin_20"

            android:src="@drawable/avatar_circle_cave"
            app:FIV_foreground="@drawable/rounded_shape_foreground"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_18"
            android:layout_marginTop="@dimen/activity_vertical_margin_20"
            android:layout_toRightOf="@id/checkout_report_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/checkout_report_name"
                style="@style/RobotoMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test Name"
                android:textColor="@color/dark_grey_blue"
                android:textSize="@dimen/text_14sp"/>

            <TextView
                android:id="@+id/checkout_report_time"
                style="@style/RobotoMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45m"
                android:textColor="@color/blue_grey"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkout_report_icon"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_16"
            android:layout_marginStart="@dimen/activity_horizontal_margin_24"
            android:layout_marginTop="@dimen/activity_vertical_margin_24"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin_24">

            <ImageView
                android:src="@drawable/ic_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginLeft="@dimen/activity_horizontal_margin_18"
                android:layout_gravity="center_vertical"
                style="@style/OpenSansExtraBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/daily_report"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_24sp"
                android:textStyle="bold"/>
        </LinearLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>