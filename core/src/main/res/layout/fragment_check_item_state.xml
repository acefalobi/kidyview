<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@+id/fragment_check_item_check_in_container"
              android:layout_marginLeft="@dimen/activity_horizontal_margin_16"
              android:layout_marginRight="@dimen/activity_horizontal_margin_24"
              android:layout_marginTop="@dimen/activity_vertical_margin_16"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/fragment_check_item_state_image"
        android:layout_width="@dimen/select_person_icon_size"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:id="@+id/fragment_check_item_state_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_16"
        android:layout_weight="1"
        android:textColor="@color/dark_grey_blue"
        android:textSize="@dimen/text_16sp"/>

    <TextView
        android:id="@+id/fragment_check_item_state_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13:15"
        android:textColor="@color/dark_grey_blue"
        android:textSize="@dimen/text_16sp"/>
</LinearLayout>